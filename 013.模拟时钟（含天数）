#include<stdio.h>
#include<windows.h>
int main()
{
	int a=1;
	int b;
	int c;
	int day;
	while(1){
		printf("现在是%d秒\n",a);
		Sleep(1000);		
		a++;
		if(a>60){
			break;
		}
	}
	a=0;
	b=1;
	while(1){
		printf("现在是%d分钟%d秒\n",b,a);
		Sleep(1000);
		a++;
		if(a==60){
			a=0;
			b++;
		}
		else if(b==60){
			break;
		}
	}
	b=0;
	c=1;
	while(1){
		printf("现在是%d小时%d分钟%d秒\n",c,b,a);
		Sleep(1000);
		a++;
		if(a==60){
			a=0;
			b++;
		}
        else if(b==60){
			b=0;
			c++;
		}
		else if(c==24){
			break;
		}
	}
	c=0;
	day=1;
	while(1){
		printf("现在是%d天%d小时%d分钟%d秒\n",day,c,b,a);
		Sleep(1000);
		a++;
		if(a==60){
			a=0;
			b++;
		}
        else if(b==60){
			b=0;
			c++;
		}
		else if(c==24){
			c=0;
			day=1;
		}
	}
	return 0;
}
